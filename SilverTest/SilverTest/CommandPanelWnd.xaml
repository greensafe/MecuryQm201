            <Label Content="通信" Height="30" Width="40" Canvas.Left="222" Canvas.Top="153"/>
            <Border BorderBrush="Black" CornerRadius="5" BorderThickness="1" Height="170" Canvas.Left="318" Canvas.Top="48" Width="261"
                    Background="LightGreen">
                <StackPanel>
                    <TextBlock>放大倍数</TextBlock>
                    <TextBlock>高压值 -360v</TextBlock>
                    <TextBlock>峰值</TextBlock>
                    <TextBlock>实时 00000</TextBlock>
                </StackPanel>
            </Border>
            <Label Content="连续测量" Canvas.Left="101" Canvas.Top="110" Height="30" Width="65"/>
            <Label Content="清洗" Canvas.Left="101" Canvas.Top="188" Height="30" Width="65" RenderTransformOrigin="0.458,1.747"/>
            <Border  Canvas.Left="171" Canvas.Top="110" CornerRadius="50" Width="30" Height="30" Background="Silver" RenderTransformOrigin="0.351,1.677"/>
            <Border  Canvas.Left="171" Canvas.Top="150" CornerRadius="50" Width="30" Height="30" Background="Silver" RenderTransformOrigin="0.351,1.677"/>
            <Border  Canvas.Left="171" Canvas.Top="185" CornerRadius="50" Width="30" Height="30" Background="Silver" RenderTransformOrigin="0.351,1.677"/>
            <Border  Canvas.Left="262" Canvas.Top="153" CornerRadius="50" Width="30" Height="30" Background="Silver" RenderTransformOrigin="0.351,1.677"/>
            <Border  Canvas.Left="262" Canvas.Top="188" CornerRadius="50" Width="30" Height="30" Background="Silver" RenderTransformOrigin="0.351,1.677"/>
            <GroupBox Header="参数设置" Width="410" Height="110" Canvas.Left="129" Canvas.Top="259">
                <Canvas>
                    <TextBox Height="23" Canvas.Left="10" TextWrapping="Wrap" Text="时间" Canvas.Top="17" Width="80"/>
                    <TextBox Height="23" Canvas.Left="136" TextWrapping="Wrap" Text="流量" Canvas.Top="17" Width="80"/>
                    <TextBox Height="23" Canvas.Left="136" TextWrapping="Wrap" Text="清洗时长" Canvas.Top="55" Width="80"/>
                    <TextBox Height="23" Canvas.Left="264" TextWrapping="Wrap" Text="高压" Canvas.Top="17" Width="80"/>
                    <TextBox Height="23" Canvas.Left="10" TextWrapping="Wrap" Text="放大倍速" Canvas.Top="55" Width="80"/>
                    <TextBox Height="23" Canvas.Left="264" TextWrapping="Wrap" Text="实时" Canvas.Top="55" Width="80"/>
                    <Border  Canvas.Left="358" Canvas.Top="48" CornerRadius="50" Width="30" Height="30" Background="Silver"/>
                </Canvas>
            </GroupBox>
        </Canvas>
    </Grid>
</Window>
