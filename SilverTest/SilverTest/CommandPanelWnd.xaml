        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        
        Title="命令面板" Height="450" Width="650">
    <Grid>
        <Canvas>
            <Border  Canvas.Left="171" Canvas.Top="70" CornerRadius="50" Width="30" Height="30" Background="Silver" RenderTransformOrigin="0.351,1.677" MouseLeftButtonDown="Border_MouseLeftButtonDown">

            </Border>
            <Label Content="采样" Canvas.Left="101" Canvas.Top="73" Height="30" Width="65"/>
