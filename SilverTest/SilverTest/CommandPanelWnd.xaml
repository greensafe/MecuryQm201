<Window x:Class="SilverTest.CommandPanelWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SilverTest"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        x:Name="CmdPanelWindow"
        Title="命令面板" Height="442" Width="588" Loaded="Window_Loaded">
    <Grid>
        <Canvas Background="LightBlue" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
            <StackPanel Margin="150,300" x:Name="parampanel" Panel.ZIndex="10" Visibility="Collapsed" Background="LightPink">
                <StackPanel.Effect>
                    <DropShadowEffect/>
                </StackPanel.Effect>
                <StackPanel Width="300" Height="80" Orientation="Horizontal" >
                    <StackPanel Width="140">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50" TextAlignment="Right" Margin="0,0,5,0">时间</TextBlock>
                            <TextBox x:Name="timeParamTxt" Width="50" TextAlignment="Center" TextChanged="timeParamTxt_TextChanged">3</TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50" TextAlignment="Right" Margin="0,0,5,0">放大倍数</TextBlock>
                            <TextBox x:Name="enlargeParamTxt" Width="50" TextAlignment="Center" TextChanged="enlargeParamTxt_TextChanged">1</TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50" TextAlignment="Right" Margin="0,0,5,0">高压</TextBlock>
                            <TextBox x:Name="presureParamTxt" Width="50" TextAlignment="Center" TextChanged="presureParamTxt_TextChanged">500</TextBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Width="140">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50" TextAlignment="Right" Margin="0,0,5,0">流量</TextBlock>
                            <TextBox  x:Name="fluParamTxt" Width="50" TextAlignment="Center" TextChanged="fluParamTxt_TextChanged">2</TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50" TextAlignment="Right" Margin="0,0,5,0">清洗时长</TextBlock>
                            <TextBox  x:Name="washtimeParamTxt" Width="50" TextAlignment="Center" TextChanged="washtimeParamTxt_TextChanged">2</TextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Width="50" TextAlignment="Right" Margin="0,0,5,0">实时</TextBlock>
                            <TextBox x:Name="realtimeParamTxt" Width="50" TextAlignment="Center" TextChanged="realtimeParamTxt_TextChanged">21</TextBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Height="30" Orientation="Horizontal">
                    <Button x:Name="setparamok" Content="确定" HorizontalAlignment="Right" Margin="200,0,10,0" Click="setparamok_Click"></Button>
                    <Button x:Name="setparamcancel" Content="取消" HorizontalAlignment="Right" Click="setparamcancel_Click"></Button>
                </StackPanel>
            </StackPanel>
            <Button x:Name="getstatusbtn" Width="40" Height="40" Style="{StaticResource MirrorStyle}" Canvas.Left="544" Canvas.Top="290" Visibility="Hidden"/>
            <StackPanel x:Name="buttoncontainerstp" Width="200" Height="300" 
                        Background="Transparent"
                        MouseLeftButtonDown="buttoncontainerstp_MouseLeftButtonDown" Canvas.Left="73" Canvas.Top="60">
                <Button x:Name="pm1" Content="测量" Height="30" Width="150" HorizontalAlignment="Left" MouseEnter="pm1_MouseEnter" Click="pm1_Click" ></Button>
                <Button x:Name="m11" Content="取样" Height="30" Width="150" HorizontalAlignment="Left" Background="LightPink" Margin="50,2,0,0"  Visibility="Collapsed" Click="m11_Click"></Button>
                <Button x:Name="m12" Content="清洗" Height="30" Width="150" HorizontalAlignment="Left" Background="LightPink" Margin="50,2,0,0" Visibility="Collapsed" Click="m12_Click"></Button>
                <Button x:Name="m13" Content="测量" Height="30" Width="150" HorizontalAlignment="Left" Background="LightPink" Margin="50,2,0,0" Visibility="Collapsed" Click="m13_Click"></Button>
                <Button x:Name="m14" Content="返回上一级菜单" Height="30" Width="150" HorizontalAlignment="Left" Background="LightPink" Margin="50,2,0,0" Visibility="Collapsed" Click="m14_Click"></Button>
                <Button x:Name="pm2" Content="连续测量" Height="30" Width="150" HorizontalAlignment="Left"></Button>
                <Button x:Name="pm3" Content="校准"  Height="30" Width="150" HorizontalAlignment="Left" Click="pm3_Click"></Button>
                <Button x:Name="pm4" Content="通信"  Height="30" Width="150" HorizontalAlignment="Left" Click="pm4_Click"></Button>
                <Button x:Name="pm5" Content="液体测量"  Height="30" Width="150" HorizontalAlignment="Left" MouseEnter="pm5_MouseEnter" Click="pm5_Click"/>
                <Button x:Name="m51" Content="清洗" Height="30" Width="150" HorizontalAlignment="Left" Background="LightPink" Margin="50,2,0,0" Visibility="Collapsed" Click="m51_Click"></Button>
                <Button x:Name="m52" Content="测量" Height="30" Width="150" HorizontalAlignment="Left" Background="LightPink" Margin="50,2,0,0" Visibility="Collapsed" Click="m52_Click" ></Button>
                <Button x:Name="m53" Content="返回上一级菜单" Height="30" Width="150" HorizontalAlignment="Left" Background="LightPink" Margin="50,2,0,0" Visibility="Collapsed" Click="m53_Click"></Button>
                <Button x:Name="pm6" Content="参数设置"  Height="30" Width="150" HorizontalAlignment="Left" Click="pm6_Click"></Button>
                <Button x:Name="pm7" Content="状态获取"  Height="30" Width="150" HorizontalAlignment="Left" Click="pm7_Click"></Button>
            </StackPanel>
            <Border CornerRadius="5" BorderBrush="Gray" BorderThickness="3" Height="197" Canvas.Left="302" Canvas.Top="60" Width="247"
                   >
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="White" Offset="0"></GradientStop>
                        <GradientStop Color="Silver" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Vertical">
                    <StackPanel Height="150" Orientation="Horizontal">
                        <StackPanel Width="100">
                            <Label Width="90" Height="30" HorizontalAlignment="Right" HorizontalContentAlignment="Right">
                                放大倍数:
                            </Label>
                            <Label Width="90" Height="30" HorizontalAlignment="Right" HorizontalContentAlignment="Right">
                                流量:
                            </Label>
                            <Label Width="90" Height="30" HorizontalAlignment="Right" HorizontalContentAlignment="Right">
                                高压值:
                            </Label>
                            <Label Width="90" Height="30" HorizontalAlignment="Right" HorizontalContentAlignment="Right">
                                实时:
                            </Label>
                        </StackPanel>
                        <StackPanel Width="150" Margin="0,5,0,0">
                            <TextBlock x:Name="enlargeblk" Width="90" Height="30" HorizontalAlignment="Left"> 1</TextBlock>
                            <TextBlock x:Name="fluentblk" Width="90" Height="30" HorizontalAlignment="Left"> 3</TextBlock>
                            <TextBlock x:Name="presureblk" Width="90" Height="30" HorizontalAlignment="Left"> 2</TextBlock>
                            <TextBlock Width="90" Height="30" HorizontalAlignment="Left"> 2</TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Height="50">
                        <TextBlock x:Name="statustxt" Height="50" HorizontalAlignment="Center" Width="200" >
                            测试中...
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Button x:Name="whidebtn" Content="退出" Height="28" Canvas.Left="498" Canvas.Top="381" Width="37" Click="whidebtn_Click"/>
            <TextBox Visibility="Collapsed" x:Name="testbox" Width="70" Canvas.Top="6"></TextBox>
            <Button Visibility="Collapsed" x:Name="teststatusbtn" Width="30" Height="20" Canvas.Left="85" Canvas.Top="3" Click="teststatusbtn_Click">test</Button>
        </Canvas>
    </Grid>
</Window>
